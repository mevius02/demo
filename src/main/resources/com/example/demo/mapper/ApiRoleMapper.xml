<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ApiRoleMapper">

  <select id="selectApiRoleList" parameterType="String" resultType="String">
    SELECT
      tarole.role_cd
    FROM t_api_role tarole
    <where>
      <if test="apiCd != null">
        tarole.api_cd = #{apiCd}
      </if>
    </where>
  </select>

</mapper>